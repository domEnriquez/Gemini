@section css {
    @Styles.Render("~/Content/login/login.css")
}

		<form data-toggle="validator" role="form">
			<div class="container">
				<div class="col-xs-3"></div>
				<div class="col-xs-6 div-signin">
					<div class="form-group">
						<label for="inputUsername" class="control-label label-general">Username:</label>
						<input type="text" class="form-control input-sm" id="inputUsername" placeholder="Username" data-error="The username you entered does not exist." required/>
                        <div class="help-block with-errors"></div>
					</div>
					<div class="form-group">
						<label for="inputPassword" class="label-general">Password:</label>
						<input type="password" class="form-control input-sm" id="inputPassword" placeholder="Password" required/>
                        <div class="help-block with-errors"></div>
					</div>
                    <div class="form-group" id="divForgot">
                        <p class="p-forgot">
                            <b>Forgot your password?</b> 
                            No problem, <a id="aForgot">click here.</a>
                        </p>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn pull-right btn-success btn-sm btn-signin form-control"> 
                            Sign in 
                        </button>
                    </div>
				</div>
				<div class="col-xs-3">
				</div>
			</div>
		<!--end: form-->
		</form>

